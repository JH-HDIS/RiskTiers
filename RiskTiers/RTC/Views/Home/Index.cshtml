    // Function to collect Data Table radio button selections and return as an array of objects
    function collectDataTableSelections() {
        const dataTableSelections = [];
        const dataTableRadioButtons = document.querySelectorAll('input[type="radio"][data-option]');

        dataTableRadioButtons.forEach((radio) => {
            if (radio.checked) {
                const option = radio.getAttribute("data-option");
                const column = radio.getAttribute("data-column");

                // Check if the option already exists in the array
                let existing = dataTableSelections.find((entry) => entry.option === option);
                if (existing) {
                    existing.columns.push(column); // Add the new column to the existing entry
                } else {
                    dataTableSelections.push({
                        option: option,
                        columns: [column],
                    });
                }
            }
        });

        return dataTableSelections; // Returns an array of objects with option and columns
    }
